
<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2> 
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p> Posted by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.body}}
    </p>
  </div>
</div>
{{/each}}
