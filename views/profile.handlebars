<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title"> Title:</label>
        <input class="form-input" type="text" id="title" name="post-title" />
      </div>

    <div class="post-body">
            <label class="label" for="body">Content</label>
            <input class="form-input" name="body" id="body" />
    </div>
        <button type="submit" class="btn btn-primary">Create Post</button>
    </form>
  </div>
</div>

  <div class="col-md-10 center post-list">

  {{#if posts.length}}
    <h3>Current Posts</h3>

    {{#each posts as |post|}}
      
    <div class="text-center">
      <div class="post">
          <h2> <a href="/post/{{post.id}}">{{post.title}}</a></h2>
          <p class="post-create">Created on {{format_date date_created}}</p>
          <p class="post-body">{{body}}</p>
      </div>
    <div class="col-md-12">
        <button class="btn btn-primary" data-id="{{post.id}}">Delete Post</button> 
        <a href="/post/{{post.id}}/edit" class="edit btn btn-primary">Edit Post</a> 
       </div>  
  </div>
    {{/each}}
  {{/if}}
</div>

<script src="./js/post.js"></script>
