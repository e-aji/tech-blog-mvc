<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Post Title:</label>
        <input class="form-input" type="text" id="title" name="post-title" />
      </div>

    <div class="post-body">
            <label class="label" for="body">Post Content</label>
            <input class="form-input" name="body" id="body" />
    </div>
        <button type="submit" class="btn btn-primary">Create Post</button>
    </form>
  </div>
</div>

  {{#if post.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>
    {{#each posts as |post|}}
      
    <div class="text-center">
      <div class="post">
          <h2 class="post-title"><a class="link" href="/post/{{id}}">{{title}}</a></h2>
          <p>Created by: {{user.name}} on {{format_date date_created}}</p>
          <p class="post-body">{{body}}</p>
      </div>
      
    <div class="col-md-6">
        <button class="delete-btn" data-id="{{post.id}}">Delete Post</button> 
        <button class="edit-btn" data-id="{{post.id}}">Edit Post</button> <!-- in JS, link to edit page -->
       </div>  
    </div>

    {{/each}}
  </div>
  {{/if}}

<script src="./js/post.js"></script>
