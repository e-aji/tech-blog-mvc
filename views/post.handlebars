<div class="text-center">
    <div class="post">
        <h2 class="post-title"><a class="link" href="/post/{{id}}">{{title}}</a></h2>
        <p>Created by: {{user.name}} on {{format_date date_created}}</p>
        <p class="post-body">{{body}}</p>
    </div>
</div>

    {{#if logged_in}}
    <div class="text-center">
        <form class="comment-form" id="comment-form">
            <div class="form-group">
                <input class="comment-input" type="text" id="comment-input" placeholder="Leave a comment"/>
                <button class="comment-btn" id="comment-btn">Post Comment</button> 
            </div>
        </form>
    </div>
    {{/if}} 

    <h2 class="text-center">Comments</h2>
    {{#each comments as |comment|}}

        <div class="comments text-center">
            <p class="content">{{content}}</p>
            <p class="author">Posted by: {{user.name}} on {{format_date date_created}}</p>
        </div>
    {{/each}}


<script src="./js/comment.js"></script>