<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit Post</h3>

    <form class="form edit-post-form"data-id="{{id}}">
      <div class="form-group">
        <label for="post-title">Post Title</label>
        <input class="form-input" type="text" id="title" name="post-title"value="{{title}}"/>
      </div>

    <div class="post-body">
            <label class="label" for="body">Post Content</label>
            <input class="form-input" name="body" id="body" value="{{body}}"/>
    </div>
        <button type="submit" class="btn btn-primary">Update Post</button>
    </form>
  </div>
</div>


<script src="/js/edit-post.js"></script>